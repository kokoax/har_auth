<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TopView">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="420dp"
            android:layout_height="552dp"
            android:id="@+id/activity_top_view" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:text="Authenticate Application"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.088" android:id="@+id/title" android:gravity="center"/>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="195dp" tools:layout_editor_absoluteY="271dp"
                        tools:layout_editor_absoluteX="53dp" android:id="@+id/sensor_text"
                        android:paddingBottom="10dp"/>
            </LinearLayout>
        </ScrollView>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="70dp" android:id="@+id/results_text" android:paddingBottom="10dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/person_prediction_text"
                android:paddingBottom="10dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/test_prediction_text"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>